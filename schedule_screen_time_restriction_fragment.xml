<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="20dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:src="@drawable/time_cub_parent_home" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/parent_home_line"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Back">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/schedule_text"
                android:paddingEnd="30dp"
                android:layout_gravity="center">

            </ImageView>

        </LinearLayout>




    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Description Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Press the day/s you wish to implement screen time restrictions."
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <!-- Day Selection Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/schedule_card_bakcground"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <!-- Sunday -->
                <ToggleButton
                    android:id="@+id/btn_sunday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="S"
                    android:textOff="S"
                    android:textOn="S"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Sunday" />

                <!-- Monday -->
                <ToggleButton
                    android:id="@+id/btn_monday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="M"
                    android:textOff="M"
                    android:textOn="M"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Monday" />

                <!-- Tuesday -->
                <ToggleButton
                    android:id="@+id/btn_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="T"
                    android:textOff="T"
                    android:textOn="T"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Tuesday" />

                <!-- Wednesday -->
                <ToggleButton
                    android:id="@+id/btn_wednesday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="W"
                    android:textOff="W"
                    android:textOn="W"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Wednesday" />

                <!-- Thursday -->
                <ToggleButton
                    android:id="@+id/btn_thursday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="Th"
                    android:textOff="Th"
                    android:textOn="Th"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Thursday" />

                <!-- Friday -->
                <ToggleButton
                    android:id="@+id/btn_friday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/day_button_selector"
                    android:text="F"
                    android:textOff="F"
                    android:textOn="F"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Friday" />

                <!-- Saturday -->
                <ToggleButton
                    android:id="@+id/btn_saturday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/day_button_selector"
                    android:text="S"
                    android:textOff="S"
                    android:textOn="S"
                    android:textColor="@drawable/day_button_text_selector"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Saturday" />

            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>
