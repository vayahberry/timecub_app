<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="20dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:src="@drawable/time_cub_parent_home" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parent_home_line"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Back">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/block_website_text"
                    android:paddingEnd="30dp"
                    android:layout_gravity="center">

                </ImageView>

            </LinearLayout>




        </LinearLayout>

        <!-- Scrollable Content Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:src="@drawable/block_website_description">

                </ImageView>



        <ImageButton
            android:id="@+id/add_website_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/add_website_to_block_button"
            android:layout_gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@animator/button_scale_down"
            android:soundEffectsEnabled="true"
            android:hapticFeedbackEnabled="true"
            android:contentDescription="Add Website to Block">
        </ImageButton>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/website_blocked_list_text"
            android:layout_marginTop="15dp"
            android:paddingEnd="30dp"
            android:layout_gravity="center">

        </ImageView>

        <!-- Blocked Websites List Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blocked_websites_container_background"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Website Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/website_icon"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="www.example.com"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="16dp" />

                <ImageButton
                    android:id="@+id/delete_website_1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/delete_account_icon"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Delete Website"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_right_icon" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Website Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/website_icon"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="www.socialmedia.com"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="16dp" />

                <ImageButton
                    android:id="@+id/delete_website_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/delete_account_icon"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Delete Website"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_right_icon" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Website Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/website_icon"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="www.gaming.com"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="16dp" />

                <ImageButton
                    android:id="@+id/delete_website_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/delete_account_icon"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Delete Website"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_right_icon" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Website Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/website_icon"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="www.entertainment.com"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginEnd="16dp" />

                <ImageButton
                    android:id="@+id/delete_website_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/delete_account_icon"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true"
                    android:soundEffectsEnabled="true"
                    android:hapticFeedbackEnabled="true"
                    android:contentDescription="Delete Website"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_right_icon" />

            </LinearLayout>

        </LinearLayout>

            </LinearLayout>

        </ScrollView>

</LinearLayout>
