<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="20dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:src="@drawable/time_cub_parent_home" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/parent_home_line"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Back">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_usage_text2"
                android:paddingEnd="30dp"
                android:layout_gravity="center">

            </ImageView>

        </LinearLayout>




    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_usage_text1"
                android:layout_marginTop="15dp"
                android:paddingEnd="30dp"
                android:layout_gravity="center">

            </ImageView>

            <!-- Search Input -->
            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/search_bar_background"
                android:hint="Search apps..."
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:maxLines="1" />

            <!-- Blocked Websites List Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/apps_list_container_background"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:id="@+id/sort_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/sort_icon"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/sort_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sort Apps"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usage"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp" />

                <!-- Scrollable Apps List -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Facebook App -->
                        <LinearLayout
                            android:id="@+id/facebook_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                android:text="F"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/app_initial_facebook"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Facebook"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/facebook_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45%"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/facebook_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(3h 35mins)"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- TikTok App -->
                        <LinearLayout
                            android:id="@+id/tiktok_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                android:text="T"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/app_initial_tiktok"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TikTok"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/tiktok_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24%"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tiktok_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(1h 55mins)"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- YouTube App -->
                        <LinearLayout
                            android:id="@+id/youtube_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                android:text="Y"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/app_initial_youtube"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="YouTube"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/youtube_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20%"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/youtube_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(1h 38mins)"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- Roblox App -->
                        <LinearLayout
                            android:id="@+id/roblox_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                android:text="R"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/app_initial_roblox"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Roblox"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/roblox_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8%"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/roblox_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(40mins)"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- Mail App -->
                        <LinearLayout
                            android:id="@+id/mail_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                android:text="M"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/app_initial_mail"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mail"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/mail_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3%"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/mail_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(15 mins)"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
