<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔧 Firebase Account Debug"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Current User Info Display -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/current_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading user information..."
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- Standard Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="🚪 Standard Logout"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:layout_marginBottom="10dp"
            android:elevation="2dp" />

        <!-- Complete Logout Button -->
        <Button
            android:id="@+id/complete_logout_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="🔥 Complete Logout (All Accounts)"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#F44336"
            android:layout_marginBottom="10dp"
            android:elevation="2dp" />

        <!-- Go to Login Button -->
        <Button
            android:id="@+id/go_to_login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="➡️ Go to Login Screen"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n• Standard Logout: Clears local session only\n• Complete Logout: Signs out from Firebase, Google &amp; Facebook\n• Go to Login: Navigate to login screen to choose account"
        android:textSize="12sp"
        android:textColor="#666666"
        android:background="#E8F5E8"
        android:padding="10dp"
        android:lineSpacingExtra="2dp" />

</LinearLayout>
