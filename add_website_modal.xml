<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/modal_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Modal Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Site URL"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- URL Input Field -->
    <EditText
        android:id="@+id/url_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/url_input_background"
        android:hint="ex: https://website.com"
        android:textColorHint="#999999"
        android:textColor="#333333"
        android:textSize="16sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:inputType="textUri"
        android:layout_marginBottom="24dp"
        android:singleLine="true"
        android:imeOptions="actionDone" />

    <!-- Confirm Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_btn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/confirm_modal_button_background"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:soundEffectsEnabled="true"
        android:hapticFeedbackEnabled="true"
        android:stateListAnimator="@null"
        android:contentDescription="Confirm URL"
        style="@style/Widget.AppCompat.Button.Borderless" />

</LinearLayout>
