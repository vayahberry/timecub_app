<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="20dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:src="@drawable/time_cub_parent_home" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/parent_home_line"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Back">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/manage_child_screen"
                android:paddingEnd="30dp"
                android:layout_gravity="center">

            </ImageView>

        </LinearLayout>




    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Child's Screen Time Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/screen_time_card"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child's Screen Time"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Time Control Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Minus Button -->
                    <ImageButton
                        android:id="@+id/decrease_hours_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/time_control_button_background"
                        android:src="@drawable/minus_icon_dark"
                        android:scaleType="centerInside"
                        android:layout_marginStart="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:soundEffectsEnabled="true"
                        android:hapticFeedbackEnabled="true"
                        android:contentDescription="Decrease Hours" />

                    <!-- Hours Display -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginHorizontal="20dp">

                        <TextView
                            android:id="@+id/hours_display"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <!-- Plus Button -->
                    <ImageButton
                        android:id="@+id/increase_hours_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/plus_button_background"
                        android:src="@drawable/plus_icon"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:focusable="true"
                        android:soundEffectsEnabled="true"
                        android:hapticFeedbackEnabled="true"
                        android:contentDescription="Increase Hours" />

                </LinearLayout>

            </LinearLayout>

            <!-- Description Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:text="Set the duration of the on-screen time for your child."
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
